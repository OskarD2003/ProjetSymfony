{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="border border-secondary rounded p-3 mb-4">
        <h1 class="text-center mb-0">Suppression Formation</h1>
    </div>
    {% if (message) %}
        <div class="alert alert-info" role="alert">
            {{ message }}
        </div>
    {% endif %}
    {% for formation in ensFormations %}
        <div class="card mb-4 shadow">
            <div class="card-header">
                <h5 class="card-title">Libelle Produit: <b>{{ formation.produit.libelle }}</b></h5>
            </div>
            <div class="card-body">
                <p>Date debut Formation: <b>{{ formation.dateDebut|date("Y/m/d") }}</b></p>
                <p>Nombres d'heures: <b>{{ formation.nbreHeures }}</b></p>
                <p>Departement: <b>{{ formation.departement }}</b></p>
                <p>Sommaire: <b>{{ formation.sommaire }}</b></p>
                <a href="{{path('app_form_sup', {'id': formation.id})}}" class="btn btn-danger">Suppression</a>
            </div>
        </div>
    {% endfor %}
  <div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col-md-4 d-flex flex-column align-items-center">
            <a href="http://projet-symfony-formation.fr/ajoutFormation" class="btn btn-primary mb-2" role="button">Ajouter une Formation</a>
            <a class="btn btn-primary mb-2" href="{{path('aff_Employes')}}">Liste des employés</a>
            <a class="btn btn-primary" href="http://projet-symfony-formation.fr/login" role="button">Déconnexion</a>
        </div>
    </div>
</div>r

{% endblock %}
