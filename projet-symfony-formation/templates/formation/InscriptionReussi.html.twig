{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">Inscription à la formation</h2>
                </div>
                <div class="card-body">
                    <p class="card-text fs-5">Félicitations, vous êtes inscrit à cette formation !</p>
                    <a class="btn btn-primary" href="http://projet-symfony-formation.fr/afficheLesFormEmploye" role="button">
                        Revenir aux formations
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}