{% extends 'base.html.twig' %}
{% block body %}

{# Add Bootstrap CSS #}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="text-center my-4" style="color: #5a6268; font-weight: bold;">Liste des Inscriptions</h3>
        </div>
    </div>
    {% if (message) %}
        <div class="alert alert-info">
            {{message}}
        </div>
    {% endif %}
    {% for inscription in ensInscriptions %}
        <div class="card mb-3 shadow">
            <div class="card-body">
                <h5 class="card-title mb-2">Nom Employe: <span class="text-success fw-bold">{{ inscription.employe.nom}}</span></h5>
                <p class="card-text mb-2">Libelle Formation: <span class="text-primary fw-bold">{{ inscription.formation.produit.libelle}}</span></p>
                <p class="card-text">Statut : <span class="fw-bold {% if inscription.statut == 'ValidÃ©' %}text-success{% elseif inscription.statut == 'En attente' %}text-warning{% else %}text-danger{% endif %}">{{ inscription.statut}}</span></p>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}